- model_class = VideoFile
.page-header
  %h1=t '.title', :default => model_class.model_name.human.pluralize.titleize

=will_paginate @video_files

%table.table.table-striped
  %thead
    %tr
      %th= model_class.human_attribute_name(:internal_name)
      %th= model_class.human_attribute_name(:internal_url)
      %th= model_class.human_attribute_name(:external_name)
      %th= model_class.human_attribute_name(:external_url)
      %th= model_class.human_attribute_name(:quality)
      %th= model_class.human_attribute_name(:year)
      %th= model_class.human_attribute_name(:size)
      %th=t '.actions', :default => t("helpers.actions")
  %tbody
    - @video_files.each do |video_file|
      %tr
        %td= video_file.internal_name
        %td= video_file.internal_url
        %td= video_file.external_name
        %td= video_file.external_url
        %td= video_file.quality
        %td= video_file.year
        %td= video_file.size
        %td
          = link_to t('.edit', :default => t("helpers.links.edit")), edit_video_file_path(video_file), :class => 'btn btn-mini'
          = link_to t('.destroy', :default => t("helpers.links.destroy")), video_file_path(video_file), :method => :delete, :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-mini btn-danger'

= link_to t('.new', :default => t("helpers.links.new")), new_video_file_path, :class => 'btn btn-primary'
