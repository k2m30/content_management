!!! 5
%html(lang="ru")
  %head
    %title Content management
    =stylesheet_link_tag "application", media: "all", "data-turbolinks-track" => true
    = javascript_include_tag "application", "data-turbolinks-track" => true
    =csrf_meta_tags

  %body
    - if user_signed_in?
      .navbar.navbar-fixed-top
        .navbar-inner
          .container
            %a.btn.btn-navbar(data-target=".nav-collapse" data-toggle="collapse")
              %span.icon-bar
              %span.icon-bar
              %span.icon-bar
            %a.brand{href: root_path} Content management
            .container.nav-collapse
              %ul.nav
                %li= link_to 'Файлы', contents_path
                %li= link_to 'Сайты', sites_path
                %li= link_to 'Внешние ссылки', links_path
                %li= link_to 'Статистика', downloads_index_path
              %ul.nav.pull-right
                %li= link_to 'Выход', destroy_user_session_path, :method => :delete
    .container
      .content
        .row
          .span9
            - if !flash[:notice].nil?
              .alert.alert-success
                %button.close(type="button" data-dismiss="alert")
                  &times;
                = flash[:notice]
            - if !flash[:alert].nil?
              .alert.alert-error
                %button.close(type="button" data-dismiss="alert")
                  &times;
                = flash[:alert]
            = yield

