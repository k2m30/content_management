= form_for @content, :html => { :class => 'form-horizontal' } do |f|
  .control-group
    = f.label 'Название', :class => 'control-label'
    .controls
      = f.text_field :name, :class => 'text_field span8'
  .control-group
    = f.label 'Внутренняя ссылка', :class => 'control-label'
    .controls
      = f.text_field :url, :class => 'text_field span8'
  .form-actions
    = f.submit 'Сохранить', :class => 'btn btn-primary'
    = link_to 'Отменить', contents_path, :class => 'btn'
