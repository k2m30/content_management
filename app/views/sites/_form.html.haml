= form_for @site, :html => { :class => 'form-horizontal' } do |f|
  .control-group
    = f.label 'Название', :class => 'control-label'
    .controls
      = f.text_field :name, :class => 'text_field'
  .control-group
    = f.label :'Name CSS selector', :class => 'control-label'
    .controls
      = f.text_field :name_css, :class => 'text_field'
  .control-group
    = f.label :'Year CSS selector', :class => 'control-label'
    .controls
      = f.text_field :year_css, :class => 'text_field'
  .control-group
    = f.label :'Regexp', :class => 'control-label'
    .controls
      = f.text_field :regexp, :class => 'text_field'
  .control-group
    = f.label 'Код баннера', :class => 'control-label'
    .controls
      = f.text_area :banner, :class => 'text_area span8', rows:20
  .form-actions
    = f.submit 'Сохранить', :class => 'btn btn-primary'
    = link_to 'Назад', sites_path, :class => 'btn'
